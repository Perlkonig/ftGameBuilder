{
  "name": "ftgamebuilder",
  "private": true,
  "version": "0.1.0",
  "description": "A web-based tool for generating valid Full Thrust games",
  "author": "Aaron Dalton <aaron@daltons.ca> (https://www.perlkonig.com)",
  "license": "MIT",
  "keywords": [
    "abstractplay",
    "full thrust",
    "game",
    "space",
    "combat"
  ],
  "type": "module",
  "scripts": {
    "dev": "set NODE_ENV=development && vite",
    "build": "set NODE_ENV=production && vite build",
    "preview": "set NODE_ENV=development && npm run build && vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.3.1",
    "@tsconfig/svelte": "^3.0.0",
    "svelte": "^3.53.1",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^3.2.4"
  },
  "dependencies": {
    "@muonw/powertable": "github:muonw/powertable",
    "dayjs": "^1.11.6",
    "ftlibgame": "github:perlkonig/ftLibGame#master",
    "ftlibship": "github:perlkonig/ftLibShip#main",
    "nanoid": "^4.0.0",
    "svelte-markdown": "^0.2.3"
  }
}
